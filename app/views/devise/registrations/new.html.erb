<div id= "home-title">
	<h1>Maintenance Minder</h1> 
</div>

<div id= "signUpBackground"> 
	<%= image_tag("no-noise.jpg",:id => "no-noise")%>
</div>


<div class= "signUp">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field" id="signUpField">
    <%= f.text_field :name, placeholder: "name" %>
    <%= f.email_field :email,placeholder: "email" %>
     <%= f.password_field :password, :id => "signupTextAboveField",placeholder: "password"%>
    <% if @minimum_password_length %>
    <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "password confirmation" %>
     <p> Minimum 6 characters </p>
    <%= f.submit "Sign up", :id => "btn-color" %>
    <% end %>
  </div>
  <% end %>
</div>