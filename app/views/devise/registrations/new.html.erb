<div class= "signUp">
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, :id => "signupTextAboveField" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, :id => "signupTextAboveField" %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, :id => "signupTextAboveField" %>
    <% if @minimum_password_length %>
    <div><em id= "signupTextAboveField">(<%= @minimum_password_length %> characters minimum)</em><div>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :id => "signupTextAboveField" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :id => "btn-color" %>
  </div>
  <br>
  <% end %>
  <%= render "devise/shared/links" %>
</div>