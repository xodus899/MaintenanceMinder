<!DOCTYPE html>

<html>
  <head>
     <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <%= csrf_meta_tags %>


          <title>MaintenanceMinder</title>


          <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>    
          <link rel="stylesheet" type="text/css" href= "../../assets/stylesheets/site.css">
            <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
             <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

   
    <nav> 
      <% if current_user %>
      <div id="userAvatar">
         <%=image_tag current_user.avatar.url(:thumb), :id => "avatar" %> 
      </div>
      <% end %>
      <div id= "logo"> 
      </div> 
      <div id="menu-btn">
        <a id="menuBtn" href="#">
          <span></span>
          <span></span>
          <span></span>  
        </a>
      </div>

      <ul id="navLinks" class= "hideNav"> 
        <li>
          <%= link_to "Home", root_path %>
        </li>
        <% if current_user %>
        <li> 
          <a class= "userName" href = "/users/edit" > <h5> Hello, <%= current_user.name %> ! </h5> </a>
        </li>
        <li>
          <%= link_to "Log Out", destroy_user_session_path, :method => :delete %>
        </li>
        <% else %>
        <li>
            <%= link_to "Log In", user_session_path %>
        </li>
        <li>
            <%= link_to "Sign Up", new_user_registration_path %>
        </li>
        <% end %>
      </ul>

    </nav>
    <%=yield %>
  </body>
</html>






